<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kinecosystem_block_margin"
        android:layout_marginBottom="@dimen/kinecosystem_block_margin"
        android:layout_marginLeft="@dimen/kinecosystem_main_margin"
        android:text="@string/enter_the_recipient_user_id"
        android:textSize="16sp"
        android:textColor="@color/kinecosystem_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <EditText
        android:id="@+id/user_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="@dimen/kinecosystem_main_margin"
        android:paddingRight="@dimen/kinecosystem_main_margin"
        android:layout_marginLeft="@dimen/kinecosystem_main_margin"
        android:layout_marginRight="@dimen/kinecosystem_main_margin"
        android:textSize="12sp"
        android:background="@drawable/stroke_frame_rounded_white"
        android:backgroundTint="@color/colorPrimary"
        android:singleLine="true"
        tools:text="slkdjf-jhsdfjkh-ui45kjasdk-kljaskdljlf"
        android:layout_marginTop="@dimen/kinecosystem_block_medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView
        android:id="@+id/pay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/kinecosystem_main_margin"
        android:layout_marginTop="@dimen/kinecosystem_block_margin"
        android:layout_marginRight="@dimen/kinecosystem_main_margin"
        android:text="@string/pay"
        android:padding="@dimen/kinecosystem_block_medium_margin"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_id_edit_text"/>

</android.support.constraint.ConstraintLayout>