<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KinRecovery.Light" parent="KinEcosystem.Light">
        <item name="colorPrimaryDark">@color/kinrecovery_colorPrimaryDark_light</item>
        <item name="editTextStrokeColor">@color/kinrecovery_edittext_stroke_light</item>
        <item name="qrSquaresColor">@color/kinrecovery_qr_squares_light</item>
        <item name="android:windowBackground">?attr/kinBackgroundColor</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="KinRecovery.Dark" parent="KinEcosystem.Dark">
        <item name="colorPrimaryDark">@color/kinrecovery_colorPrimaryDark_dark</item>
        <item name="editTextStrokeColor">@color/kinrecovery_edittext_stroke_dark</item>
        <item name="qrSquaresColor">@color/kinrecovery_qr_squares_dark</item>
        <item name="android:windowBackground">?attr/kinBackgroundColor</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="KinrecoveryAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">?attr/kinBackgroundColor</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/kinecosystem_button_disabled_dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/KinrecoveryDialogNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/KinrecoveryDialogPositiveButtonStyle</item>
    </style>

    <style name="KinrecoveryDialogNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/kinecosystem_button_disabled_dark</item>
    </style>

    <style name="KinrecoveryDialogPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/kinecosystem_purple</item>
    </style>

    <style name="KinrecoveryCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/kinecosystem_gray_light</item>
        <item name="colorControlActivated">@color/kinecosystem_purple</item>
    </style>
        
</resources>