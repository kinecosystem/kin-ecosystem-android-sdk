<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">

    <aapt:attr name="android:drawable">
        <vector xmlns:android="http://schemas.android.com/apk/res/android"
            android:height="8dp"
            android:viewportHeight="24"
            android:viewportWidth="72"
            android:width="24dp">

            <group
                android:name="circle1"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:fillColor="#6f41e8"
                    android:pathData="M 1.989 11.999 C 1.989 6.784 6.219 2.555 11.435 2.555 C 16.65 2.555 20.879 6.784 20.879 11.999 C 20.879 17.215 16.65 21.445 11.435 21.445 C 6.219 21.445 1.989 17.215 1.989 11.999 Z"/>
            </group>
            <group
                android:name="circle2"
                android:pivotX="36"
                android:pivotY="12">
                <path
                    android:fillColor="#6f41e8"
                    android:pathData="M 26.567 12.001 C 26.567 6.783 30.791 2.555 35.999 2.555 C 41.209 2.555 45.432 6.783 45.432 12.001 C 45.432 17.215 41.209 21.445 35.999 21.445 C 30.791 21.445 26.567 17.215 26.567 12.001 Z"/>
            </group>
            <group
                android:name="circle3"
                android:pivotX="60"
                android:pivotY="12">
                <path
                    android:fillColor="#6f41e8"
                    android:pathData="M 51.437 12.001 C 51.437 6.896 55.576 2.756 60.681 2.756 C 65.786 2.756 69.925 6.896 69.925 12.001 C 69.925 17.105 65.786 21.244 60.681 21.244 C 55.576 21.244 51.437 17.105 51.437 12.001 Z"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="circle1">
        <aapt:attr name="android:animation">
            <set android:interpolator="@android:interpolator/accelerate_quad">
                <!-- beat 1 -->
                <objectAnimator
                    android:duration="500"
                    android:propertyName="scaleX"
                    android:valueFrom="1"
                    android:valueTo="0.1"
                    android:repeatMode="reverse"
                    android:repeatCount="infinite"/>
                <objectAnimator
                    android:duration="500"
                    android:propertyName="scaleY"
                    android:valueFrom="1"
                    android:valueTo="0.1"
                    android:repeatMode="reverse"
                    android:repeatCount="infinite"/>
            </set>
        </aapt:attr>
    </target>

    <target android:name="circle2">
        <aapt:attr name="android:animation">
            <set android:interpolator="@android:interpolator/accelerate_quad">
                <!-- beat 1 -->
                <objectAnimator
                    android:duration="500"
                    android:propertyName="scaleX"
                    android:valueFrom="1"
                    android:valueTo="0.1"
                    android:startOffset="250"
                    android:repeatMode="reverse"
                    android:repeatCount="infinite"/>
                <objectAnimator
                    android:duration="500"
                    android:propertyName="scaleY"
                    android:valueFrom="1"
                    android:valueTo="0.1"
                    android:startOffset="250"
                    android:repeatMode="reverse"
                    android:repeatCount="infinite"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="circle3">
        <aapt:attr name="android:animation">
            <set android:interpolator="@android:interpolator/accelerate_quad">
                <!-- beat 1 -->
                <objectAnimator
                    android:duration="500"
                    android:propertyName="scaleX"
                    android:valueFrom="1"
                    android:valueTo="0.1"
                    android:startOffset="500"
                    android:repeatMode="reverse"
                    android:repeatCount="infinite"/>
                <objectAnimator
                    android:duration="500"
                    android:propertyName="scaleY"
                    android:valueFrom="1"
                    android:valueTo="0.1"
                    android:startOffset="500"
                    android:repeatMode="reverse"
                    android:repeatCount="infinite"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>

