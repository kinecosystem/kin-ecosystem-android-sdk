<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.LinearLayout">

    <com.kin.ecosystem.widget.TouchIndicatorIcon
        android:id="@+id/settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/kinecosystem_main_small_margin"
        android:layout_marginRight="@dimen/kinecosystem_main_margin"/>

    <com.kin.ecosystem.widget.KinEcosystemTextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        app:fontExtra="medium"
        style="@style/KinecosysSubTitle"
        android:textColor="?attr/primaryTextColor"/>

    <ImageView
        android:id="@+id/settings_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/kinecosystem_main_small_margin"
        app:srcCompat="@drawable/kinecosystem_ic_arrow_right"
        />

</merge>