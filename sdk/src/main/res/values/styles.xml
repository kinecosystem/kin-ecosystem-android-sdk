<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KinEcosystem.Light" parent="KinEcosystemTranslucent.Light">
        <item name="backgroundCardImage">@drawable/kinecosystem_screen_bg_light</item>
        <item name="menuMyKinIcon">@drawable/kinecosystem_ic_my_kin</item>
        <item name="menuSettingsIcon" >@drawable/kinecosystem_ic_settings</item>
        <item name="settingsBackupIcon">@drawable/kinecosystem_ic_backup</item>
        <item name="settingsRestoreIcon">@drawable/kinecosystem_ic_restore</item>
        <item name="settingsKinTransferIcon">@drawable/kinecosystem_ic_kin_transfer</item>
        <item name="tabDeselectedBackgroundColor">@color/kinecosystem_tab_deselected_background_light</item>
        <item name="offerBackground">@drawable/kinecosystem_offer_item_bg_light</item>
        <item name="separatorColor">@color/settings_separator_light</item>
        <item name="onboardingImage">@drawable/kinecosystem_onboarding_image_light</item>
    </style>

    <style name="KinEcosystem.Dark" parent="KinEcosystemTranslucent.Dark">
        <item name="backgroundCardImage">@drawable/kinecosystem_screen_bg_dark</item>
        <item name="menuMyKinIcon">@drawable/kinecosystem_ic_my_kin_dark</item>
        <item name="menuSettingsIcon" >@drawable/kinecosystem_ic_settings_dark</item>
        <item name="settingsBackupIcon">@drawable/kinecosystem_ic_backup_dark</item>
        <item name="settingsRestoreIcon">@drawable/kinecosystem_ic_restore_dark</item>
        <item name="settingsKinTransferIcon">@drawable/kinecosystem_ic_kin_transfer_dark</item>
        <item name="tabDeselectedBackgroundColor">@color/kinecosystem_tab_deselected_background_dark</item>
        <item name="offerBackground">@drawable/kinecosystem_offer_item_bg_dark</item>
        <item name="separatorColor">@color/settings_separator_dark</item>
        <item name="onboardingImage">@drawable/kinecosystem_onboarding_image_dark</item>
    </style>

    <style name="KinecosysToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/kinecosystem_white</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/kinecosystem_black</item>

        <!-- Enable clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>

    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="KinecosysToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="KinecosysBalanceTextSmall">
        <item name="android:textSize">@dimen/kinecosystem_title_size</item>
        <item name="android:textColor">@color/kinecosystem_primary</item>
    </style>

    <style name="KinecosysBalanceTextLarge">
        <item name="android:textSize">@dimen/kinecosystem_title_xlarge_size</item>
        <item name="android:textColor">@color/kinecosystem_primary</item>
    </style>


    <style name="KinecosysFullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="KinecosysBottomAnimationDialog">
        <item name="android:windowEnterAnimation">@anim/kinecosystem_slide_up</item>
        <item name="android:windowExitAnimation">@anim/kinecosystem_slide_down</item>
    </style>

</resources>