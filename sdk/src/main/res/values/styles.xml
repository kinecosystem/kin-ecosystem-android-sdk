<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KinecosysNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/kinecosystem_white</item>
        <item name="colorPrimaryDark">@color/kinecosystem_transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/kinecosystem_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="KinecosysNoActionBar.Light" parent="KinecosysNoActionBar">
        <item name="primaryTextColor">@color/kinecosystem_title</item>
        <item name="backgroundCardImage">@drawable/kinecosystem_screen_bg_light</item>
        <item name="menuMyKinIcon">@drawable/kinecosystem_ic_my_kin</item>
        <item name="menuSettingsIcon" >@drawable/kinecosystem_ic_settings</item>
        <item name="settingsBackupIcon">@drawable/kinecosystem_ic_backup</item>
        <item name="settingsRestoreIcon">@drawable/kinecosystem_ic_restore</item>
        <item name="tabDeselectedBackgroundColor">@color/kinecosystem_tab_deselected_background_light</item>
    </style>

    <style name="KinecosysNoActionBar.Dark" parent="KinecosysNoActionBar">
        <item name="primaryTextColor">@color/kinecosystem_white</item>
        <item name="backgroundCardImage">@drawable/kinecosystem_screen_bg_dark</item>
        <item name="menuMyKinIcon">@drawable/kinecosystem_ic_my_kin_dark</item>
        <item name="menuSettingsIcon" >@drawable/kinecosystem_ic_settings_dark</item>
        <item name="settingsBackupIcon">@drawable/kinecosystem_ic_backup_dark</item>
        <item name="settingsRestoreIcon">@drawable/kinecosystem_ic_restore_dark</item>
        <item name="tabDeselectedBackgroundColor">@color/kinecosystem_tab_deselected_background_dark</item>
    </style>

    <style name="KinecosysToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/kinecosystem_white</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/kinecosystem_black</item>

        <!-- Enable clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>

    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="KinecosysToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="KinecosysTextBase">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--Title-->
    <style name="KinecosysTitle" parent="KinecosysTextBase">
        <item name="android:textSize">@dimen/kinecosystem_title_size</item>
    </style>

    <style name="KinecosysTitleSmall" parent="KinecosysTextBase">
        <item name="android:textSize">@dimen/kinecosystem_small_title_size</item>
    </style>

    <style name="KinecosysTitleMedium" parent="KinecosysTextBase">
        <item name="android:textSize">@dimen/kinecosystem_title_medium_size</item>
    </style>

    <style name="KinecosysTitleLarge" parent="KinecosysTextBase">
        <item name="android:textSize">@dimen/kinecosystem_title_large_size</item>
    </style>

    <!--Subtitle-->
    <style name="KinecosysSubTitle" parent="KinecosysTextBase">
        <item name="android:textSize">@dimen/kinecosystem_sub_title_size</item>
        <item name="android:textColor">@color/kinecosystem_subtitle</item>
    </style>

    <style name="KinecosysFullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="KinecosysBottomAnimationDialog">
        <item name="android:windowEnterAnimation">@anim/kinecosystem_slide_up</item>
        <item name="android:windowExitAnimation">@anim/kinecosystem_slide_down</item>
    </style>

</resources>